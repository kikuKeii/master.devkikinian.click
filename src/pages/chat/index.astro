---
import Blank from "../../layouts/Blank.astro";
---

<Blank title="Chat">
  <div class="container py-5">
    <div class="row d-flex justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-8">
        <div class="card" id="chat1" style="border-radius: 15px;">
          <div
            class="card-header d-flex justify-content-between align-items-center p-3 bg-danger text-white border-bottom-0"
            style="border-top-left-radius: 15px; border-top-right-radius: 15px;"
          >
            <i class="bi bi-chevron-left"></i>
            <p class="mb-0 fw-bold">Live chat</p>
            <i class="bi bi-clock"></i>
          </div>
          <div class="card-body">
            <!-- start  -->
            <div class="chat" style="height: 400px; overflow-y: auto;">
              <div class="d-flex flex-row justify-content-start mb-4">
                <svg
                  width="100"
                  height="100"
                  xmlns="http://www.w3.org/2000/svg"
                  style="width: 45px; height: 100%;"
                  class="rounded-5"
                >
                  <rect width="45px" height="100%" fill="#e0e0e0"></rect>
                  <text
                    x="50%"
                    y="50%"
                    font-size="20"
                    fill="#000"
                    font-family="Arial"
                    text-anchor="middle"
                    alignment-baseline="middle">AI</text
                  >
                </svg>
                <div
                  class="p-3 ms-3"
                  style="border-radius: 15px; background-color: rgba(57, 192, 237,.2);"
                >
                  <p class="small mb-0">Hello, Bisa gak cek video aku?</p>
                </div>
              </div>

              <div class="d-flex flex-row justify-content-end mb-4">
                <div
                  class="p-3 me-3 border"
                  style="border-radius: 15px; background-color: #fbfbfb;"
                >
                  <p class="small mb-0">Bisa</p>
                </div>
                <svg
                  width="100"
                  height="100"
                  xmlns="http://www.w3.org/2000/svg"
                  style="width: 45px; height: 100%;"
                  class="rounded-5"
                >
                  <!-- Background -->
                  <rect width="45px" height="100%" fill="#e0e0e0"></rect>

                  <!-- Huruf U -->
                  <text
                    x="50%"
                    y="50%"
                    font-size="20"
                    fill="#000"
                    font-family="Arial"
                    text-anchor="middle"
                    alignment-baseline="middle">U</text
                  >
                </svg>
              </div>

              <div class="d-flex flex-row justify-content-start mb-4">
                <svg
                  width="100"
                  height="100"
                  xmlns="http://www.w3.org/2000/svg"
                  style="width: 45px; height: 100%;"
                  class="rounded-5"
                >
                  <rect width="45px" height="100%" fill="#e0e0e0"></rect>
                  <text
                    x="50%"
                    y="50%"
                    font-size="20"
                    fill="#000"
                    font-family="Arial"
                    text-anchor="middle"
                    alignment-baseline="middle">AI</text
                  >
                </svg>
                <div class="ms-3" style="border-radius: 15px;">
                  <div class="bg-image">
                    <img
                      src="https://dummyimage.com/600x400/000/fff&text=My+Video"
                      style="border-radius: 15px;"
                      width="70%"
                      alt="video"
                    />
                    <a href="#!">
                      <div class="mask"></div>
                    </a>
                  </div>
                </div>
              </div>

              <div class="d-flex flex-row justify-content-start mb-4">
                <svg
                  width="100"
                  height="100"
                  xmlns="http://www.w3.org/2000/svg"
                  style="width: 45px; height: 100%;"
                  class="rounded-5"
                >
                  <rect width="45px" height="100%" fill="#e0e0e0"></rect>
                  <text
                    x="50%"
                    y="50%"
                    font-size="20"
                    fill="#000"
                    font-family="Arial"
                    text-anchor="middle"
                    alignment-baseline="middle">AI</text
                  >
                </svg>
                <div
                  class="p-3 ms-3"
                  style="border-radius: 15px; background-color: rgba(57, 192, 237,.2);"
                >
                  <p class="small mb-0">...</p>
                </div>
              </div>
              <div class="d-flex flex-row justify-content-start mb-4">
                <svg
                  width="100"
                  height="100"
                  xmlns="http://www.w3.org/2000/svg"
                  style="width: 45px; height: 100%;"
                  class="rounded-5"
                >
                  <rect width="45px" height="100%" fill="#e0e0e0"></rect>
                  <text
                    x="50%"
                    y="50%"
                    font-size="20"
                    fill="#000"
                    font-family="Arial"
                    text-anchor="middle"
                    alignment-baseline="middle">AI</text
                  >
                </svg>
                <div
                  class="p-3 ms-3"
                  style="border-radius: 15px; background-color: rgba(57, 192, 237,.2);"
                >
                  <p class="small mb-0">...</p>
                </div>
              </div>
              <div class="d-flex flex-row justify-content-start mb-4">
                <svg
                  width="100"
                  height="100"
                  xmlns="http://www.w3.org/2000/svg"
                  style="width: 45px; height: 100%;"
                  class="rounded-5"
                >
                  <rect width="45px" height="100%" fill="#e0e0e0"></rect>
                  <text
                    x="50%"
                    y="50%"
                    font-size="20"
                    fill="#000"
                    font-family="Arial"
                    text-anchor="middle"
                    alignment-baseline="middle">AI</text
                  >
                </svg>
                <div
                  class="p-3 ms-3"
                  style="border-radius: 15px; background-color: rgba(57, 192, 237,.2);"
                >
                  <p class="small mb-0">...</p>
                </div>
              </div>
              <!-- end -->
            </div>
            <div class="bg-light my-2"></div>
            <div class="form-floating">
              <textarea
                class="form-control"
                placeholder="Leave a comment here"
                id="floatingTextarea2"
                style="height: 100px"></textarea>
              <label for="floatingTextarea2">Type your message</label>
            </div>
            <div class="my-3 text-center">
              <button type="button" class="btn btn-outline-danger"
                >Send <i class="bi bi-send"></i></button
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Blank>
